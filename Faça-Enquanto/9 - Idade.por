programa {
  inteiro idade
  funcao inicio() {
        faca
        {
          escreva("Digite sua idade: ")
          leia(idade)
            
          se (idade < 16)
          {
            escreva("Idade inválida. Você deve ter 16 anos ou mais.\n")
          }
        }
        enquanto (idade < 16)
        
        escreva("Idade válida! Você tem ", idade, " anos.\n")
  }
}